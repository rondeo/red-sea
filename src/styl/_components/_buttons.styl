.btn
	display inline-block
	padding 12px 15px
	font 1em $Reg
	color $text-color
	border 2px solid transparent
	transition all .23s ease-in-out
	&__accent
		background $accent-color
	&__shadow
		background transparent
	&__dark
		background $dark-color
	&__close
		width 20px
		height 20px
		background url('../img/icons/svg/close-ic.svg') center no-repeat
		
	&__search
		&::-ms-clear
			display none 
			width 0
			height 0
		&::-ms-reveal
			display none 
			width 0
			height 0
		
		&::-webkit-search-decoration,
		&::-webkit-search-cancel-button,
		&::-webkit-search-results-button,
		&::-webkit-search-results-decoration
			display none
		
	&__up
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background $accent-color
		z-index 10
		text-align center
		transition all .23s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($dark-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $dark-color
			border-right 1px solid $dark-color
			transition all .23s ease-in-out
		&:hover
			background  $dark-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $accent-color
				border-right 1px solid $accent-color
		

.hamburger
	display inline-block
	width 30px
	height 30px
	cursor pointer
	span
		display block
		width 100%
		height 4px
		background $accent-color
		margin-bottom 3px
		&:last-child
			margin-bottom 0
		