.lang
	position relative
	width 80px
	border 1px solid rgba($light-color, .15)
	border-radius 4px
	height 40px
	display flex
	align-items center
	justify-content center
	text-transform uppercase
	color $light-color
	font 1.2142857em $Comf
	
	&__arrow
		display block
		width 10px
		height 10px
		margin-left 10px
		svg
			display block
			width 100%
			height 100%
			fill $light-color
	&__wrapper
		margin-right 30px
	&__dropdown
		position absolute
		padding-top 10px
		top 100%
		left 0
		width 100%
		z-index 2
		margin-top 10px
		opacity 0
		visibility hidden
		transition all .15s ease-in-out
	&__list
		border-radius 4px
		border 1px solid rgba($light-color, .15)
		padding 10px
	&__item
		display block
		margin-bottom 10px
		text-align center	
		&:last-child
			margin-bottom 0
			
	&__link
		color $light-color
		&:hover
			opacity .6
			

	&:hover
		.lang__dropdown
			opacity 1
			margin-top 0
			visibility visible
			



.socials
	height 19px
	&__item
		display inline-block
		margin-right 19px
		&:last-child
			margin-right 0
	&__link
		display block
		width 19px
		height 19px
		&--ic
			display block
			width 100%
			height 100%
			svg
				fill $light-color
				transition fill .15s ease-in-out
				
		&:hover
			svg
				fill $dark-accent-color

.footer__socials
	.socials__link
		&:hover
			svg
				fill #BBEAFB			


.toggle
	&__block
		margin-top 35px
	&__link
		position relative
		padding-right 17px
		color $light-color
		font-family $ComfReg
		font-size  1.125em
		line-height 1
		display inline-block
		&:before
			content 'Показать еще'
			
		&--ic
			display inline-block
			width 10px
			height 7px
			position absolute
			right 0
			top 50%
			margin-top -3.5px
			svg
				display block
				width 100%
				height 100%
				fill $light-color
		&.is-active
			&:before
				content 'Скрыть'
				
			.toggle__link--ic
				transform rotate(180deg)
				
	&__content
		padding-top 20px
		display none
		


// Datepicker
.date
	&-picker
		&-wrapper
			border none
			border-radius 4px
			background-color $light-color
			box-shadow 0 3px 6px rgba($dark-color, .1)
			padding 25px 35px 35px 35px
			width 100%
			max-width 520px
			z-index 6
			.drp_top-bar
				display none
				
			table
				.caption
					.prev,
					.next
						color $dark-accent-color
						font-size 17px
						&:hover
							background-color rgba($accent-color, .77)
						
				
			.month
				&-wrapper
					width 100% !important
					border none
					border-radius 0
					padding 0
					// display flex
					// .month1,
					// .month2
					// 	float none
					table
						width 47% !important
						
					.gap
						width 6% !important
						margin 0
						background transparent !important
						&-lines
							display none
				
						
					table
						.day
							font 14px $Reg
							color #333832
							&.real-today
								background-color $accent-color
								color $light-color !important

							&.toMonth.hovering
								background-color rgba($accent-color, .77) !important
								color $light-color !important
								
							&.checked
								color $light-color !important

					
				&-element
					color $dark-accent-color
					font 13px $ComfReg
					
			.week
				&-name
					font 13px $ComfBold
					color rgba($dark-accent-color, .58)
						

			.first-date-selected,
			.last-date-selected
				background-color $accent-color !important
				color $light-color !important
				
			.footer
				display none
				
			.date-range-length-tip
				background-color $primary-color
				color $light-color
				&:after
					border-color $primary-color
			
						
				