.promo
	&__slider
		full()
		
		.swiper
			&-container,
			&-wrapper,
			&-slide
				width 100%
				height 100%
				position relative
				
		.swiper-slide
				opacity 0 !important
				&-active
					opacity 1 !important
					
		&--btns
			position absolute
			width 100%
			max-width 1480px
			margin 0 auto
			padding 0 30px
			position absolute
			horisontal-center()
			top 465px
			pointer-events none
			z-index 3
			display flex
			align-items center
			justify-content space-between
			
		&--btn
			width 120px
			text-transform uppercase
			display flex
			align-items center
			pointer-events auto
			z-index 3
			cursor pointer
			color $light-color
			font-weight 700
			&-next
				justify-content flex-end
			
			&-prev
				justify-content flex-start
				span
					order 2
				i
					order 1
					transform scaleX(-1)
					margin-left 0
					margin-right 5px
			&-ic
				display block
				width 13px
				height 8px
				flex none
				margin-left 5px
				svg
					display block
					width 100%
					height 100%
					fill $light-color
				
		&--dots
			margin-top 24px
			display flex
			justify-content center
			.swiper-pagination-bullet
				opacity 1
				width 25px
				height 25px
				background transparent
				border-radius 50%
				border 1px solid transparent
				position relative
				display inline-block
				&:before
					pseudo()
					position absolute
					position-center()
					width 5px
					height 5px
					border-radius 50%
					background-color $light-color
					opacity .5
					transition opacity .15s ease-in-out
				&:focus
					outline none
				
				&-active
					border-color $light-color
					&:before
						opacity 1
					
	&__slide
		background-position bottom  center
		background-repeat no-repeat
		background-size 100% auto
		width 100%
		height 100%
		padding-top 360px
		// min-height 1150px
		min-height 1310px
		box-sizing border-box
		
		&--title
			font 4.2857em $ComfReg
			margin-bottom 30px
			&-block
				width 650px
				margin 0 auto
				color $light-color
				text-align center
				p
					font-size 1.142857em




.slide
	bg(50%, 50%)
	width 100%
	height 370px
	box-shadow 2px 2px 14px rgba($dark-color, .1)
	
	&__thumb
		bg(50%, 50%)
		height 95px
		border 1px solid transparent
		transition border-color .15s ease-in-out

.slider
	width 100%
	&__thumbs
		margin-top 20px
	&__scroll
		height 2px
		background-color rgba(#F6F6F6, .15)
		width 100%
		margin-top 20px
		border-radius 50px
		
		.swiper-scrollbar-drag
			height 2px
			background-color $light-color
			border-radius 50px
			
		&--dark
			background-color rgba($dark-accent-color, .15)
			.swiper-scrollbar-drag
				background-color $dark-accent-color
				
		&--lg
			height 3px
			.swiper-scrollbar-drag
				height 3px
			
	.swiper-slide-thumb-active
		.slide__thumb
			border-color $primary-color
			
	&__lg
		position relative
		
	&__btn
		display inline-block
		width 34px 
		height 34px
		position relative
		background-color rgba($light-color, .15)
		position absolute
		vertical-center()
		svg
			display block
			width 6px
			height 11px
			fill $light-color
			transition fill .15s ease-in-out
			
		&--ic
			display block
			width 6px
			height 11px
			position absolute
			position-center()
		&--prev
			border-radius 17px 0 0 17px	
			left -34px
		&--next
			border-radius 0  17px 17px 0
			right -34px
			i
				transform translate(-50%, -50%) scaleX(-1)
				
		&:hover
			background-color rgba($light-color, 1)
			svg
				fill $dark-accent-color
				
		&--light
			background-color $color-bg
			svg
				fill $dark-accent-color
				
			&:hover
				background-color $dark-accent-color
				svg
					fill $light-color
					



.gallery
	&__slider
		position relative
		z-index 2
		margin-bottom 50px
		

	&__slide
		display flex
		height 425px
		width 100%
		transition transform .2s ease-out
		&--col
			width 50%
			height 100%
			padding 0 5px
		&--img
			width 100%
			flex none
			height 100%
			bg(50%, 50%)
			
	&__slider
		.swiper-slide
			flex-col-center()
			width 1170px
			
			.gallery__slide
				transform scale(0.6, 0.6)
				
			&-active
				.gallery__slide
					transform scale(1, 1)
					
		&--controls
			position absolute
			vertical-center()
			z-index 1
			width 100%
			.slider__btn
				&--prev
					left 1px
				&--next
					right 1px
		