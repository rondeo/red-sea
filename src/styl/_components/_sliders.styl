.promo
	&__slider
		full()
		
		.swiper
			&-container,
			&-wrapper,
			&-slide
				width 100%
				height 100%
				position relative
				
		.swiper-slide
				opacity 0 !important
				&-active
					opacity 1 !important
					
		&--btns
			position absolute
			width 100%
			max-width 1480px
			margin 0 auto
			padding 0 30px
			position absolute
			horisontal-center()
			top 465px
			pointer-events none
			z-index 3
			display flex
			align-items center
			justify-content space-between
			
		&--btn
			width 120px
			text-transform uppercase
			display flex
			align-items center
			pointer-events auto
			z-index 3
			cursor pointer
			color $light-color
			font-weight 700
			&-next
				justify-content flex-end
			
			&-prev
				justify-content flex-start
				span
					order 2
				i
					order 1
					transform scaleX(-1)
					margin-left 0
					margin-right 5px
			&-ic
				display block
				width 13px
				height 8px
				flex none
				margin-left 5px
				svg
					display block
					width 100%
					height 100%
					fill $light-color
				
		&--dots
			margin-top 24px
			display flex
			justify-content center
			.swiper-pagination-bullet
				opacity 1
				width 25px
				height 25px
				background transparent
				border-radius 50%
				border 1px solid transparent
				position relative
				display inline-block
				&:before
					pseudo()
					position absolute
					position-center()
					width 5px
					height 5px
					border-radius 50%
					background-color $light-color
					opacity .5
					transition opacity .15s ease-in-out
				&:focus
					outline none
				
				&-active
					border-color $light-color
					&:before
						opacity 1
					
	&__slide
		background-position bottom -120px center
		background-repeat no-repeat
		background-size 100% auto
		width 100%
		height 100%
		padding-top 360px
		min-height 1050px
		box-sizing border-box
		
		&--title
			font 4.2857em $Comf
			margin-bottom 30px
			&-block
				width 650px
				margin 0 auto
				color $light-color
				text-align center
				p
					font-size 1.142857em


