// ========== ========== G L O B A L   S T Y L E S ========== ==========
html
	text-size-adjust none
	box-sizing border-box
	
*
	padding 0
	margin 0
	box-sizing inherit
	&:after,
	&:before
		box-sizing inherit


body
	font 16px $Reg
	line-height 1.6
	overflow-x hidden
	min-width 320px
	height 100%
	opacity 1
	position relative
	color $text-color
	background-color $body-bg

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea
	outline none
	background transparent
	border none
	transition all .23s ease-in-out
	&:focus
		outline none
		
textarea
	resize vertical
	width 100%
	
select
	appearance none
	-webkit-appearance none
	-moz-appearance none
	transition all .23s ease-in-out
	cursor pointer
	&:focus
		outline none

a
	text-decoration none
	outline none
	transition all .23s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .23s ease-in-out
	background transparent
	&:focus
		outline none

img
	width 100%
	height auto
	

// ========== ========== ========== ========== ========== ==========

// ========== ========== M A I N   S T Y L E S ========== ==========

.disable-hover,
.disable-hover * 
	pointer-events none !important

.clearfix:before,
.clearfix:after,
.container:before,
.container:after
	content " "
	display table

.clearfix:after,
.container:after
	clear both

.box 
	padding $box-gutters
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%
	
.sect
	background-size cover
	background-repeat no-repeat
	&__overlay
		position relative
		&:after
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba($sect-overlay-bg, $sect-overlay-opacity)
		.container
			position relative
			z-index 1

.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
	
.light-color
	color $light-color
	
.accent-color
	color $accent-color

.dark-color
	color $dark-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	

