//=======================================================================================================
// @font-face
// Usage: webfont('Crimson-Text-Roman', 'crimson-text', 'crimsontext-roman-webfont', true, normal, normal)
//=======================================================================================================

// FontAwesome
webfont('FontAwesome', 'FontAwesome/fontawesome-webfont', 'FontAwesome', true, normal, normal)

// Light
webfont('OpenSansLight', 'OpenSans/OpenSansLight', 'OpenSansLight', true, normal, normal)

// Italic
webfont('OpenSansItalic', 'OpenSans/OpenSansItalic', 'OpenSansItalic', true, normal, normal)

// Regular
webfont('OpenSansRegular', 'OpenSans/OpenSansRegular', 'OpenSansRegular', true, normal, normal)
webfont('OpenSansRegularItalic', 'OpenSans/OpenSansRegularItalic', 'OpenSansRegularItalic', true, normal, normal)

// SemiBold (Medium)
webfont('OpenSansSemiBold', 'OpenSans/OpenSansSemiBold', 'OpenSansSemiBold', true, normal, normal)
webfont('OpenSansSemiBoldItalic', 'OpenSans/OpenSansSemiBoldItalic', 'OpenSansSemiBoldItalic', true, normal, normal)

// Bold
webfont('OpenSansBold', 'OpenSans/OpenSansBold', 'OpenSansBold', true, normal, normal)
webfont('OpenSansBoldItalic', 'OpenSans/OpenSansBoldItalic', 'OpenSansBoldItalic', true, normal, normal)

// ExtraBold (Black)
webfont('OpenSansExtraBold', 'OpenSans/OpenSansExtraBold', 'OpenSansExtraBold', true, normal, normal)
webfont('OpenSansExtraBold', 'OpenSans/OpenSansExtraBold', 'OpenSansExtraBold', true, normal, normal)